# Docker Compose 环境变量配置

# 环境设置
NODE_ENV=development

# 部署的原始域名地址
SITE_DOMAIN_URL=https://yourdomain.com

# 数据库连接配置
FASTIFY_DATABASE_URL=postgresql://postgres:postgres@postgres:5432/fastify_db
NEXT_DATABASE_URL=postgresql://postgres:postgres@postgres:5432/shadcn_next

# 服务端口容器外部端口配置
FASTIFY_PORT=4000
NEXT_PORT=4001

# JWT 密钥
JWT_SECRET=your-jwt-secret-key

# Jira 配置
JIRA_USERNAME=your-jira-username
JIRA_PASSWORD=your-jira-password
